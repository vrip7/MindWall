# EditorConfig â€” https://editorconfig.org
# MindWall project-wide editor configuration

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript / JSX / JSON
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# YAML / Docker Compose
[*.{yml,yaml}]
indent_size = 2

# HTML / CSS
[*.{html,css}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# PowerShell
[*.ps1]
indent_size = 4
end_of_line = crlf

# Dockerfiles
[Dockerfile*]
indent_size = 4

# SQL
[*.sql]
indent_size = 2

# .env files
[.env*]
insert_final_newline = false
